{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --unstable-kv --watch main.ts",
    "start": "deno run --allow-net --allow-env --unstable-kv main.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"]
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
